{
  "version": "0.0.1",
  "name": "Awesome Highlighter",
  "manifest_version": 2,
  "description": "Highlight your selected text",
  "icons": {
    "32": "img/icon-32.png",
    "64": "img/icon-64.png",
    "128": "img/icon-128.png"
  },
  "browser_action": {
    "default_title": "Highlight The Selected Text",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/background_script.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "/js/content_script.bundle.js"
      ],
      "css": [
        "/css/ui.css"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "tabs"
  ],
  "homepage_url": "https://github.com/sjmyuan/awesome-highlighter"
}
